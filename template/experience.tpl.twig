<section id="Experience">
    <div class="row">
        <h1 class="col-lg-12 col-md-12">
            {{ render.title }}
        </h1>
    </div>
    <div class="row">
        <div class="col-lg-5 col-md-5 col-lg-offset-6 col-md-offset-6">
            <a id="BtnWriteExperience" href="#WriteExperience">Ecrire une expérience</a>
        </div>
    </div>
    <div class="row">
        <h2 class="col-lg-5 col-md-5 col-lg-offset-1 col-md-offset-1">
            Les expériences de l'équipe :
        </h2>
    </div>
    <div id="ExperienceEquipe" class="row">
        <div id="ExperienceEquipeCarousel" class="carousel col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">
            <ul class="slides">
                {% for c in render.comments_equipe %}
                {% if loop.index0 % 2 == 0 %}
                {% if loop.index0 != 0 %}
                    </li>
                {% endif %}
                <li class="col-lg-12 col-md-12">
                    {% endif %}
                    <div class="row anExperience">
                        <div class="col-lg-10 col-md-10">
                            <h3>{{ c.auteur }}</h3>
                            {{ c.contenu|raw }}
                            <button data-expandable="false">En savoir plus...</button>
                        </div>
                    </div>
                    {% endfor %}
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <ul id="ExperienceExterneTab" class="nav nav-tabs col-lg-offset-1">
            <li class="active actived"><h2><a href="#ExperienceJeune" data-toggle="tab">Les expériences des jeunes</a></h2></li>
            <li ><h2><a href="#ExperienceAncien" data-toggle="tab">Les expériences des anciens</a></h2></li>
        </ul>
    </div>
    <div class="tab-content">
        <div id="ExperienceJeune" class="row tab-pane active">
            <div id="ExperienceJeuneCarousel" class="carousel col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">
                <ul class="slides">
                    {% for c in render.comments_jeunes %}
                        {% if loop.index0 % 2 == 0 %}
                            {% if loop.index0 != 0 %}
                                </li>
                            {% endif %}
                            <li class="col-lg-12 col-md-12">
                        {% endif %}
                                <div class="row anExperience">
                                    <div class="col-lg-12 col-md-12">
                                        <h3>{{ c.comment_author }}</h3>
                                        <p>{{ c.comment_content|nl2br }}</p>
                                        <button data-expandable="false">En savoir plus...</button>
                                    </div>
                                </div>
                    {% endfor %}
                    </li>
                </ul>
            </div>
        </div>
        <div id="ExperienceAncien" class="row tab-pane">
            <div id="ExperienceAncienCarousel" class="carousel col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">
                <ul class="slides">
                    {% for c in render.comments_anciens %}
                    {% if loop.index0 % 2 == 0 %}
                    {% if loop.index0 != 0 %}
                        </li>
                    {% endif %}
                    <li class="col-lg-12 col-md-12">
                        {% endif %}
                        <div class="row anExperience">
                            <div class="col-lg-12 col-md-12">
                                <h3>{{ c.comment_author }}</h3>
                                <p>{{ c.comment_content|nl2br }}</p>
                                <button data-expandable="false">En savoir plus...</button>
                            </div>
                        </div>
                        {% endfor %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <h2 class="col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">
            Partage ton expérience avec ACTE13 :
        </h2>
    </div>
    <div class="row">
        <div id="WriteExperience" class="col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">
            {{ form_commentaire|raw }}
        </div>
    </div>
</section>