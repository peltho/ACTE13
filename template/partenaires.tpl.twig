<div class="row">
    <h1 class="col-lg-12 col-md-12">
        {{ render.title }}
    </h1>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
<script src="/wordpress/wp-content/themes/acte13/js/springy.js"></script>
<script src="/wordpress/wp-content/themes/acte13/js/springyui.js"></script>

<canvas id="springydemo" width="915" height="600"></canvas>

<script>
    var graph = new Springy.Graph();

    var acte13 = graph.newNode({label: 'ACTE 13'});
    var miage = graph.newNode({label: 'Miage Aix-Marseille'});
    var cg = graph.newNode({label: 'Conseil général des Bouches-du-Rhône'});

    graph.newEdge(acte13, miage, {color: '#A90000'});
    graph.newEdge(acte13, cg, {color: '#A90000'});

    var $j = jQuery.noConflict();

    $j(function(){
        var springy = window.springy = $j('#springydemo').springy({
            graph: graph,
            nodeFont: "12px Verdana",
            nodeSelected: function(node){
                console.log('Node selected: ' + JSON.stringify(node.data));
            }
        });
    });
</script>